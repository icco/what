<div class="row">
  <div class="media span12">
    <span class="pull-left" href="#">
      <img class="media-object" style="width: 64px; height: 64px;" src="data:image/png;base64,">
    </span>
    <div class="media-body">
      <h4 class="media-heading">Idea #<%= @idea.id %></h4>
      <div class="media-text"><%= @idea.text %></div>
    </div>
  </div>
</div>

<% @idea.comments.each do |c| %>
  <div class="row">
    <div class="media span11 offset1">
      <span class="pull-left" href="#">
        <img class="media-object" style="width: 64px; height: 64px;" src="data:image/png;base64,">
      </span>
      <div class="media-body">
        <div class="media-text">
          <%= c.text %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="span11 offset1">
    <% form_tag '', :method => 'post', :class => '' do %>
      <%= text_area_tag 'text', :class => 'input-block-level' %>
      <%= submit_tag "comment", :class => 'btn pull-right' %>
    <% end %>
  </div>
</div>
